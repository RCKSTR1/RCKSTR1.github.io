  <span class="na">url</span><span class="pi">:</span>          <span class="s">http://incorporated.sendtoinc.com/</span>
  <span class="na">facebook</span><span class="pi">:</span>     <span class="s">sendtoinc</span>
  <span class="na">twitter</span><span class="pi">:</span>      <span class="s">sendtoinc</span>
  <span class="na">about_link</span><span class="pi">:</span>   <span class="s">https://sendtoinc.com/about/</span>
  
  <span class="c1"># Product Information</span>
